{
  "name": "wildlander-launcher",
  "version": "0.1.210",
  "description": "A launcher for the Wabbajack modpacks",
  "author": "Wildlander",
  "scripts": {
    "serve": "vue-cli-service electron:serve",
    "build": "vue-cli-service electron:build",
    "lint": "npm run lint:typescript && npm run lint:eslint && npm run lint:styles",
    "electron:build": "vue-cli-service electron:build",
    "electron:debug:main": "electron --remote-debugging-port=9223 ./dist_electron",
    "electron:debug:renderer": "npm run serve -- --debug",
    "electron:serve": "vue-cli-service electron:serve",
    "lint:eslint": "vue-cli-service lint",
    "lint:styles": "stylelint **/*.scss",
    "lint:typescript": "tsc --noEmit",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "main": "background.js",
  "dependencies": {
    "electron-log": "^4.4.3",
    "electron-store": "^8.0.1",
    "find-process": "^1.4.7",
    "fs-extra": "^10.0.0",
    "js-ini": "^1.5.1",
    "junk": "^3.1.0",
    "mitt": "^3.0.0",
    "ncp": "^2.0.0",
    "vue": "^3.2.23",
    "vue-class-component": "^8.0.0-0",
    "vue-final-modal": "^3.4.3",
    "vue-router": "^4.0.12",
    "vue3-click-away": "^1.2.1",
    "vue3-popper": "^1.4.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.5",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/fs-extra": "^9.0.13",
    "@types/ini": "^1.3.31",
    "@types/ncp": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.5.15",
    "@vue/cli-plugin-eslint": "^4.5.15",
    "@vue/cli-plugin-router": "~4.5.15",
    "@vue/cli-plugin-typescript": "^4.5.15",
    "@vue/cli-service": "~4.5.15",
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/eslint-config-typescript": "^5.0.2",
    "babel-eslint": "^10.1.0",
    "commitlint": "^15.0.0",
    "electron": "^16.0.4",
    "electron-devtools-installer": "^3.1.0",
    "electron-updater": "^4.6.1",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^7.20.0",
    "lint-staged": "^12.1.2",
    "node-sass": "^6.0.1",
    "prettier": "^2.5.1",
    "reflect-metadata": "^0.1.13",
    "sass-loader": "^10.2.0",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended-scss": "^4.3.0",
    "stylelint-scss": "^3.21.0",
    "typescript": "^4.5.4",
    "vue-cli-plugin-electron-builder": "~2.1.1",
    "vue-property-decorator": "^9.1.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [
        0,
        "always"
      ]
    },
    "parserPreset": {
      "parserOpts": {
        "noteKeywords": [
          "docs:"
        ]
      }
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e -V "
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint"
    ],
    "*.scss": [
      "npm run lint:styles"
    ]
  },
  "repository": "https://github.com/Wildlander-mod/Launcher"
}
