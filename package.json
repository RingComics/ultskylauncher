{
  "name": "ultimate-skyrim-launcher",
  "version": "0.1.20",
  "description": "A launcher for the Ultimate Skyrim modpack",
  "author": "Ultimate Skyrim",
  "repository": "https://github.com/UltimateSkyrim/ultskylauncher",
  "scripts": {
    "serve": "vue-cli-service electron:serve",
    "build": "vue-cli-service electron:build",
    "test:unit": "vue-cli-service test:unit",
    "lint": "npm run lint:typescript && npm run lint:eslint && npm run lint:styles",
    "lint:styles": "stylelint **/*.scss",
    "lint:typescript": "tsc --noEmit",
    "lint:eslint": "vue-cli-service lint",
    "electron:debug:main": "electron --remote-debugging-port=9223 ./dist_electron",
    "electron:debug:renderer": "npm run serve -- --debug",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "main": "background.js",
  "dependencies": {
    "core-js": "^3.6.5",
    "electron-log": "^4.4.0",
    "electron-store": "^8.0.0",
    "mitt": "^3.0.0",
    "ncp": "^2.0.0",
    "vue": "^3.0.0",
    "vue-class-component": "^8.0.0-0",
    "vue-final-modal": "^3.3.0",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/config-conventional": "^12.0.1",
    "@octokit/request": "^5.4.14",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^24.0.19",
    "@types/ncp": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "^4.5.11",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "^4.5.11",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "^2.0.0-0",
    "babel-eslint": "^10.1.0",
    "commitlint": "^12.0.1",
    "electron": "^9.4.4",
    "electron-devtools-installer": "^3.1.0",
    "electron-updater": "^4.3.9",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^7.0.0-0",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "sass-loader": "^8.0.2",
    "spectron": "11.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "~3.9.3",
    "vue-cli-plugin-electron-builder": "~2.0.0-rc.5",
    "vue-jest": "^5.0.0-0",
    "vue-property-decorator": "^9.1.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [
        0,
        "always"
      ]
    },
    "parserPreset": {
      "parserOpts": {
        "noteKeywords": [
          "docs:"
        ]
      }
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e -V "
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.{scss}": [
      "npm run lint:styles",
      "git add"
    ]
  }
}
